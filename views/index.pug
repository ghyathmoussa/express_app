extends layout/main_layout.pug

mixin createProduct(pro)
    .col-md-4
        .card.my-3
            img.card-images-top(src=`/images/${pro.image}` alt='')
            .card-body
                h4.card-title
                    a(href=`/product/${pro.id}`) #{pro.name}
                p.card-text.pt-2
                    small.text-muted
                        i.fas.fa-lira-sign
                        |                                     #{pro.price}
            .card-footer
                
                a.btn.btn-secondary.btn-sm(href='#') Details
                a.btn.btn-secondary.btn-sm(href='#') Add to cart


block content
    include includes/slider.pug
    .row
        if products.length > 0
            each pro in products
                +createProduct(pro)
        else 
            h1 No Product Found